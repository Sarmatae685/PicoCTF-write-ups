source "https://rubygems.org"
# Where to get libraries (official Ruby repository)

gem "github-pages", group: :jekyll_plugins
# The basic GitHub Pages package (includes Jekyll and all necessary plugins)

gem "jekyll-feed", "~> 0.12"
# Plugin for creating RSS feeds (users can subscribe to updates of this repository)

gem "jekyll-seo-tag"
# SEO plugin (to help Google index site better)

gem "jekyll-titles-from-headings"
# for automatic headlines

gem "jekyll-remote-theme"
# for correct operation with remote theme
